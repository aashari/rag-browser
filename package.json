{
  "name": "rag-browser",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "rag-browser": "dist/cli.js",
    "rag-browser-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "browser": "bun run src/cli/index.ts",
    "build": "bun build ./src/cli/index.ts --outfile=./dist/cli.js --target node --external playwright --external playwright-core --external chromium-bidi --external electron && bun build ./src/index.ts --outfile=./dist/index.js --target node --external playwright --external playwright-core --external chromium-bidi --external electron",
    "postbuild": "chmod +x dist/*.js",
    "prepare": "bun run build",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "bun-types": "latest",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "chalk": "^5.4.1",
    "chromium-bidi": "^0.5.3",
    "electron": "^29.0.1",
    "playwright": "^1.50.1"
  }
}
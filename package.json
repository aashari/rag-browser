{
  "name": "@aashari/rag-browser",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for browser automation using Playwright.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rag-browser": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node --external playwright",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepublishOnly": "npm run build",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "playwright": "^1.50.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "bun-types": "latest",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aashari/rag-browser.git"
  },
  "keywords": [
    "playwright",
    "automation",
    "AI",
    "mcp",
    "model-context-protocol",
    "rag"
  ],
  "author": "Andi Ashari",
  "bugs": {
    "url": "https://github.com/aashari/rag-browser/issues"
  },
  "homepage": "https://github.com/aashari/rag-browser"
}
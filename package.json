{
  "name": "@aashari/rag-browser",
  "version": "1.0.0",
  "description": "An MCP server for Playwright-based web automation.",
  "license": "MIT",
  "type": "module",
  "bin": {
    "rag-browser": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node --external playwright --external playwright-core --external chromium-bidi --external electron",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepare": "npm run build",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "chalk": "^5.4.1",
    "playwright": "^1.50.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "bun-types": "latest",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}